---
import { Text } from "../components";
import { CheckCircleIcon } from "@heroicons/react/24/outline";

const description =
  "Partner with Toggle for data-driven marketing strategies, propelling businesses towards exponential growth and success.";

const values = [
  {
    title: "Data-driven success",
    description:
      "Data-driven strategies delivering tangible results for our clients.",
  },
  {
    title: "Stay ahead of the curve",
    description:
      "Digital success made simple with our innovative solutions and cutting-edge strategies.",
  },
  {
    title: "Transparency and Visibility",
    description: "Build transparent partnerships for shared success.",
  },
];
---

<section class="py-12 sm:py-16 lg:py-20 xl:py-24 bg-neutral-50">
  <div class="px-4 sm:px-6 lg:px-8 text-center">
    <div class="max-w-3xl mx-auto text-center">
      <Text variant="h2">We scale brands</Text>
      <Text variant="p" color="secondary" className="mt-4">
        {description}
      </Text>
    </div>
    <div
      class="max-w-5xl mx-auto bg-neutral-200 w-full h-60 mt-8"
      data-aos="fade-up"
    >
    </div>
    <div class="mt-8">
      <div class="flex flex-wrap items-center justify-center gap-x-4 gap-y-2">
        {
          values.map((value) => (
            <div class="flex gap-1 items-center">
              <CheckCircleIcon className="w-5" />
              <Text variant="p">{value.title}</Text>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
