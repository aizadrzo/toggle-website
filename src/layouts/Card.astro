---
import { twMerge } from "tailwind-merge";
const { className } = Astro.props;
---

<div
  class={twMerge(
    "animate relative p-5 overflow-hidden bg-white border border-gray-200 rounded-2xl",
    className
  )}
>
  <slot />
</div>
<style>
  @keyframes animate-in-and-out {
    entry 0% {
      opacity: 0;
      transform: translateY(100%);
    }
    entry 100% {
      opacity: 1;
      transform: translateY(0);
    }

    exit 0% {
      opacity: 1;
      transform: translateY(0);
    }
    exit 100% {
      opacity: 0;
      transform: translateY(-100%);
    }
  }

  .animate {
    animation: linear both animate-in-and-out;
    animation-timeline: view();
    animation-range: entry 50% cover 50%;
  }
</style>
