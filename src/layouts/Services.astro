---
import { Text } from "../components";
import {
  CursorArrowRaysIcon,
  VideoCameraIcon,
  PencilIcon,
  EnvelopeIcon,
  CubeIcon,
  ChartBarIcon,
} from "@heroicons/react/20/solid";
import Card from "./Card.astro";

const title = "What we do";

const services = [
  {
    icon: CursorArrowRaysIcon,
    title: "Pay-per Click Advertising",
    description:
      "Drive Conversions: Targeted campaigns on Google, Bing, & social media, leveraging keywords, ad copy, & bid optimization for high ROI.",
  },
  {
    icon: VideoCameraIcon,
    title: "Social Media Marketing",
    description:
      "Enjoy tailored social media strategies on Facebook, Instagram, Twitter, LinkedIn, and more. Boost brand visibility and audience engagement effortlessly.",
  },
  {
    icon: PencilIcon,
    title: "Content Marketing",
    description:
      "Eye-catching blogs, informative infographics, and more. Boost brand authority and drive organic traffic with our content marketing strategies.",
  },
  {
    icon: EnvelopeIcon,
    title: "Email Marketing",
    description:
      "Maximize Email Success: Expert strategies for targeted content, improved open rates, and unparalleled conversions.",
  },
  {
    icon: CubeIcon,
    title: "CRO",
    description:
      "Optimize conversions with our CRO services. Utilize data-driven analysis, enhanced UX, and optimized landing pages for better results.",
  },
  {
    icon: ChartBarIcon,
    title: "Analytics and Reporting",
    description:
      "Utilize real-time data for informed decisions, strategy refinement, and continuous improvement, converting clicks into effortless conversions.",
  },
];
---

<section class="py-12 sm:py-16 lg:py-20 xl:py-24">
  <div class="px-4 mx-auto sm:px-6 lg:px-8 max-w-3xl text-center">
    <Text variant="h2">{title}</Text>
    <div class="grid grid-cols-1 md:grid-cols-2 mt-4 sm:mt-8 gap-4">
      {
        services.map((service) => (
          <Card className="text-left">
            <div class="flex items-center gap-2">
              <div class="py-2 shrink-0">
                <service.icon className="w-5" />
              </div>
              <Text variant="h3">{service.title}</Text>
            </div>
            <Text variant="small" color="secondary" className="mt-4">
              {service.description}
            </Text>
          </Card>
        ))
      }
    </div>
  </div>
</section>
